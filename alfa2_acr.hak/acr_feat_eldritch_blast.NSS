void main() {
	int nPos = GetClassPosition(CLASS_TYPE_WARLOCK, OBJECT_SELF);
	
	if(!nPos) return;
	
	int nSpellId = 0;
	
	switch(GetSpellFeatId()) {
		case FEAT_ELDRITCH_BLAST_1: nSpellId = SPELL_ELDRITCH_BLAST_1; break;
		case FEAT_ELDRITCH_BLAST_2: nSpellId = SPELL_ELDRITCH_BLAST_2; break;
		case FEAT_ELDRITCH_BLAST_3: nSpellId = SPELL_ELDRITCH_BLAST_3; break;
		case FEAT_ELDRITCH_BLAST_4: nSpellId = SPELL_ELDRITCH_BLAST_4; break;
		case FEAT_ELDRITCH_BLAST_5: nSpellId = SPELL_ELDRITCH_BLAST_5; break;
		case FEAT_ELDRITCH_BLAST_6: nSpellId = SPELL_ELDRITCH_BLAST_6; break;
		case FEAT_ELDRITCH_BLAST_7: nSpellId = SPELL_ELDRITCH_BLAST_7; break;
		case FEAT_ELDRITCH_BLAST_8: nSpellId = SPELL_ELDRITCH_BLAST_8; break;
		case FEAT_ELDRITCH_BLAST_9: nSpellId = SPELL_ELDRITCH_BLAST_9; break;		
	}
	
	if(nSpellId)
		SetSpellKnown(OBJECT_SELF, nPos, nSpellId, TRUE, TRUE);
		
	SendMessageToPC(OBJECT_SELF, "Adding spell id " + IntToString(nSpellId) + " to class at position " + IntToString(nPos) + ".");
}