////////////////////////////////////////////////////////////////////////////////

void main( int iActionType, string sParam0, string sParam1, string sParam2, string sParam3 );

////////////////////////////////////////////////////////////////////////////////
// Function Definitions ////////////////////////////////////////////////////////
////////////////////////////////////////////////////////////////////////////////

void main( int iActionType, string sParam0, string sParam1, string sParam2, string sParam3 ) {
	// Current GUI user.
	object oPC = OBJECT_SELF;

	// Generic UI actions.
	switch ( iActionType ) {
		case ACR_UGUI_ACT_CALL_INTERFACE:
			ACR_FI_RunCommand( oPC, sParam0, sParam1, sParam2, sParam3 );
			break;
		case ACR_UGUI_ACT_OPEN_CATEGORY:
			ACR_UGUI_CloseCurrentSubcategory( oPC );
			ACR_UGUI_SetCurrentCategory( oPC, sParam0 );
			break;
		case ACR_UGUI_ACT_OPEN_SUBCATEGORY:
			ACR_UGUI_SetCurrentSubcategory( oPC, sParam0 );
			break;
		case ACR_UGUI_ACT_SET_COLLAPSED:
			int bHidden = ( sParam0 == "1" ) ? TRUE : FALSE;
			ACR_UGUI_SetCollapsed( oPC, bHidden );
			break;
	}
}