int StartingConditional(int nSkill, int nDC)
{
    object oPC = GetPCSpeaker();

    // return TRUE or FALSE depending on the player's skill ranks
    return (GetSkillRank(nSkill, oPC) >= 0) ? GetIsSkillSuccessful(oPC, nSkill, nDC) : FALSE;
}
