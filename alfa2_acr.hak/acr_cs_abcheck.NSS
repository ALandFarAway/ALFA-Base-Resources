int StartingConditional(int nAbility, int nDC)
{
    object oPC = GetPCSpeaker();

    // return TRUE or FALSE depending on the player's ability score
    return (d20(1) + GetAbilityModifier(nAbility, oPC) >= nDC) ? TRUE : FALSE;
}
