//! Checks if the user can use spells such as etherealness, dimensional door,
//! or teleport. Should also be called on teleportation circles and portals.
//!  - oPC: Object that should be teleporting.
int ACR_CanExtradimensionalTravel( object oPC );

////////////////////////////////////////////////////////////////////////////////
// Function Definitions : PUBLIC ///////////////////////////////////////////////
////////////////////////////////////////////////////////////////////////////////

int ACR_CanExtradimensionalTravel( object oPC ) {
	if ( GetHasSpellEffect( SPELL_DIMENSIONAL_ANCHOR, oPC ) ) return FALSE;
	return TRUE;
}

