//  Description
//  This is a simple example of a spawn group script which is used by the ACR's
//  spawn system. Though the name of the script is "as_group_example", the spawn
//  point which uses this script would simply have "example" listed as a spawn
//  group name, since the "as_group_" is always added on to the beginning. For a
//  more complex example of spawn groups, see the script "as_group_complex".
//
//  Revision History
// Rick, made several types of rats.
////////////////////////////////////////////////////////////////////////////////

////////////////////////////////////////////////////////////////////////////////
// Includes ////////////////////////////////////////////////////////////////////
////////////////////////////////////////////////////////////////////////////////

// This line is required on all spawn group scripts.
#include "acr_1sc_spawn_i"
#include "acr_placeable_i"

////////////////////////////////////////////////////////////////////////////////
// Constants ///////////////////////////////////////////////////////////////////
////////////////////////////////////////////////////////////////////////////////

////////////////////////////////////////////////////////////////////////////////
// Structures //////////////////////////////////////////////////////////////////
////////////////////////////////////////////////////////////////////////////////

////////////////////////////////////////////////////////////////////////////////
// Global Variables ////////////////////////////////////////////////////////////
////////////////////////////////////////////////////////////////////////////////

////////////////////////////////////////////////////////////////////////////////
// Function Prototypes /////////////////////////////////////////////////////////
////////////////////////////////////////////////////////////////////////////////

// This is the main function, which is what the spawn system runs when this
// spawn group is spawned.
void main();

////////////////////////////////////////////////////////////////////////////////
// Function Definitions ////////////////////////////////////////////////////////
////////////////////////////////////////////////////////////////////////////////

void main() {

	object oWP, o;

	oWP = OBJECT_SELF;
	o = ACR_SpawnLootDetector();
	        
	switch(Random(7)) {
		case 0:
			SetLocalString(o, "PL_RESREF", "phat_lewt_grave");
			SetLocalInt(o, "PL_NO_TRAP", 1);
			break;
		case 1:
			SetLocalString(o, "PL_RESREF", "phat_lewt_sarcophagus");
			break;
		case 2:
			SetLocalString(o, "PL_RESREF", "phat_lewt_skeleton");
			SetLocalInt(o, "PL_NO_TRAP", 1);
			break;
		case 3:
			SetLocalString(o, "PL_RESREF", "phat_lewt_dirt");
			SetLocalInt(o, "PL_NO_TRAP", 1);
			break;
		case 4:
			SetLocalString(o, "PL_RESREF", "phat_lewt_urn");
			break;
		case 5:
			SetLocalString(o, "PL_RESREF", "phat_lewt_skullpile");
			SetLocalInt(o, "PL_NO_TRAP", 1);
			break;
		case 6:
			SetLocalInt(o, "PL_NO_TRAP", 1);
			switch (Random(4)) {
				case 0:
					SetLocalString(o, "PL_RESREF", "phat_lewt_corpse_female");
					break;
				case 1:
					SetLocalString(o, "PL_RESREF", "phat_lewt_corpse_male");
					break;
				case 2:
					SetLocalString(o, "PL_RESREF", "phat_lewt_corpse_wizmale");
					break;
				case 3:
					SetLocalString(o, "PL_RESREF", "phat_lewt_corpse_ogre");
					break;
			}
	}
}
