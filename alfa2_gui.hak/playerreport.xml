<?xml version="1.0" encoding="NWN2UI">

<UIScene name="SCREEN_PLAYERREPORT" x=ALIGN_CENTER y=ALIGN_CENTER width=526 height=420 fadeout="0.3" fadein="0.3" draggable=true
