				valign=middle align=left fontfamily="Body_Font" style=1 />
			<UIButton name="player_alignment" x=260 y=0 height=32 width=32 buttontype=radio
				groupid=1 groupmemberid=1 prototype=true fill="ia_defend.tga"
				OnToolTip0=UIObject_Misc_ExtractData("parent:","string",6,local:0)
				OnToolTip1='UIObject_Tooltip_DisplayTooltipString(local:0,"OBJECT_X","OBJECT_Y","SCREEN_TOOLTIP_2")'>
				<UIText align=right valign=bottom fontfamily="Default" style="1"/>
			</UIButton>
