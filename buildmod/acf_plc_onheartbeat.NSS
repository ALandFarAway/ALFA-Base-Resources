void main()
{
    ACR_PlaceableOnHeartbeat();

    // remove the handler for this once initialized
    if (!GetLocalInt(OBJECT_SELF, "ACR_PLC_HB_ENABLED")) {
    	SetEventHandler(OBJECT_SELF, SCRIPT_PLACEABLE_ON_HEARTBEAT, "");
    }
}
