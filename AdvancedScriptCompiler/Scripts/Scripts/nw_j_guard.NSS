//::///////////////////////////////////////////////
//:: PlayerWearsUniform
//:: Copyright (c) 2001 Bioware Corp.
//:://////////////////////////////////////////////
/*
    Checks if player has fetch item.
*/
//:://////////////////////////////////////////////
//:: Created By:
//:: Created On:
//:://////////////////////////////////////////////
int PlayerWearsUniform(object oPC)
{
    return (GetUniform() == GetTag(GetItemInSlot(INVENTORY_SLOT_CHEST, oPC)));
}

